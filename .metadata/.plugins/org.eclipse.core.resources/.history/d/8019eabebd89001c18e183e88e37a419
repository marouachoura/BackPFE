package com.example.demo.dao;

import java.util.Date;

import org.springframework.data.jpa.repository.JpaRepository;

import com.example.demo.entities.Employe;
import com.example.demo.entities.Formation;

public interface FormationRepository extends JpaRepository<Formation, Long>{
	Employe findByNomFormationContaining(String NomFormation );
	Employe findByNomFormateurContaining(String NomFormateur );
	Employe findByNiveauContaining(String Niveau );
	Employe findByDureeContaining(Date Duree );
	Employe findByCertificationContaining(String Certification );


}
